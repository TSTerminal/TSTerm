{
  "name": "TSTerm",
  "version": "1.0.0",
  "description": "TSTerm is a software package that provides 3270 terminal functionality in a TypeScript implementation.   A brief explanation of the project can be found at:",
  "main": "./lib/tsterm.min.js",
  "type": "module", 
  "types": "./lib/tsterm.d.ts",
  "scripts": {
    "build": "rollup -c",
    "build:omp" : "rollup -c --format iife --name org_omp_tsterm_tn3270",
    "watch": "rollup -c -w",
    "build:dts": "dts-bundle-generator -o ./lib/tsterm.d.ts ./src/publicApi.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TSTerminal/TSTerm.git"
  },
